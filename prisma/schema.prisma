generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) // Unique ID, cuid() is a secure, collision-resistant ID
  email     String   @unique // Every user must have a unique email
  name      String
  password  String   // We will store a HASHED password here, not plain text
  phone     String?  // The '?' makes this field optional
  role      Role     @default(CUSTOMER) // The user's role, defaults to CUSTOMER
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  CUSTOMER
  RESTAURANT_OWNER
  DELIVERY_PARTNER
  ADMIN
}